<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- CUSTOM THEME -->
    <style name="AppTheme.Red" parent="AppTheme">
        <item name="background">@color/red</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.EditTextStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/size_text</item>
        <item name="android:drawablePadding">@dimen/padding_drawable</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>
</resources>